            <div class="overlay-inner">
                <div class="overlay-content">
                    <div class = "more-info">
                        <a class = "cta-btn cta-btn-sm" href="{tag_itemurl_nolink}">Click for more details</a>
                    </div>                   
                </div>
            </div>
        </div>
    </div> 
